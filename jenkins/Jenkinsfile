pipeline {
    agent any   // Runs on your Windows Jenkins agent

    environment {
        CI = 'true'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Installing dependencies...'
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'npm test'
            }
        }
    }

    post {
        success {
            echo '✅ Build and Test completed successfully!'
        }
        failure {
            echo '❌ Build or Test failed. Check logs for details.'
        }
    }
}
