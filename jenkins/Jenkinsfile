pipeline {
    agent any

    stages {
        stage('Verify Environment') {
            steps {
                echo 'ğŸ” Checking environment variables...'
                
                // These commands will now work because your PATH is fixed
                bat 'node -v'
                bat 'npm -v'
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ”§ Installing dependencies...'
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                
                // This '|| ( )' syntax is the correct way
                // to handle an optional test script in Windows
                bat 'npm test || (echo No test script found)'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and Test completed successfully!'
        }
        failure {
            echo 'âŒ Build or Test failed â€” check console output.'
        }
    }
}
