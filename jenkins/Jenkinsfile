pipeline {
    agent any

    environment {
        CI = 'true'   // Enables continuous integration mode for npm
    }

    stages {
        stage('Build') {
            steps {
                echo 'ğŸ”§ Installing dependencies...'
                script {
                    if (isUnix()) {
                        sh 'npm install'
                    } else {
                        bat 'npm install'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                script {
                    if (isUnix()) {
                        sh 'npm test'
                    } else {
                        bat 'npm test'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and Test completed successfully!'
        }
        failure {
            echo 'âŒ Build or Test failed â€” check console output.'
        }
    }
}

