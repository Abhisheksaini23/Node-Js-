pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim'   // Node.js Docker image
        }
    }

    environment {
        CI = 'true'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Installing dependencies...'
                bat 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'npm test'   // or './jenkins/scripts/test.sh' if you have a custom script
            }
        }
    }

    post {
        success {
            echo '✅ Build and Test completed successfully!'
        }
        failure {
            echo '❌ Build or Test failed. Check logs for details.'
        }
    }
}
