pipeline {
    agent any

    environment {
        PATH = "C:\\Program Files\\nodejs;C:\\Windows\\System32;${PATH}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'node -v'
                bat 'npm -v'
                bat 'npm install'
            }
        }

        stage('Build') {
            when {
                expression { fileExists('package.json') }
            }
            steps {
                bat 'npm run build || echo "No build script found!"'
            }
        }

        stage('Test') {
            when {
                expression { fileExists('package.json') }
            }
            steps {
                bat 'npm test || echo "No tests configured!"'
            }
        }
    }

    post {
        success {
            echo "✅ Build & Test Successful!"
        }
        failure {
            echo "❌ Build or Test Failed. Check logs."
        }
    }
}
