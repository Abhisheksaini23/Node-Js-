pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'ğŸ”§ Installing dependencies...'
                bat '''
                echo Current Directory: %cd%
                node -v
                npm -v
                npm install
                '''
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                bat '''
                npm test || echo "No test script found in package.json"
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and Test completed successfully!'
        }
        failure {
            echo 'âŒ Build or Test failed â€” check console output.'
        }
    }
}
