pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'ğŸ”§ Installing dependencies...'
                bat '''
                "C:\\Windows\\System32\\cmd.exe" /c node -v
                "C:\\Windows\\System32\\cmd.exe" /c npm -v
                "C:\\Windows\\System32\\cmd.exe" /c npm install
                '''
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Running tests...'
                bat '''
                "C:\\Windows\\System32\\cmd.exe" /c npm test || echo "No test script found"
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Build and Test completed successfully!'
        }
        failure {
            echo 'âŒ Build or Test failed â€” check console output.'
        }
    }
}

